generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  role          UserRole     @default(USER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  name          String
  email         String       @unique
  emailVerified Boolean
  image         String?
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  comments      Comment[]
  experiments   Experiment[]
  files         File[]
  ratings       Rating[]
  userFile      UserFile?
  accounts      Account[]
  sessions      Session[]
  reviews        Review[]

  @@map("user")
}

model LegalDocument {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Startpage {
  id          Boolean  @id @default(true)
  text        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  files       File[]
}

model Experiment {
  id              String                     @id @default(uuid())
  name            String
  slug            String                     @unique
  userId          String?
  status          ExperimentStatus           @default(DRAFT)
  duration        Int
  previewImageId  String?
  createdAt       DateTime                   @default(now())
  updatedAt       DateTime                   @updatedAt
  changeRequest   String?
  revisionOfId    String?                    @unique
  ratingsAvg      Float                      @default(0)
  ratingsCount    Int                        @default(0)
  ratingsSum      Int                        @default(0)
  commentsEnabled Boolean                    @default(true)
  comments        Comment[]
  previewImage    File?                      @relation(fields: [previewImageId], references: [id])
  revisionOf      Experiment?                @relation("Revision", fields: [revisionOfId], references: [id])
  revisedBy       Experiment?                @relation("Revision")
  user            User?                      @relation(fields: [userId], references: [id])
  sections        ExperimentSectionContent[]
  ratings         Rating[]
  attributes      ExperimentAttributeValue[] @relation("ExperimentToExperimentAttributeValue")
  reviews         Review[]
}

model ExperimentSection {
  id          String                     @id @default(uuid())
  name        String
  slug        String                     @unique
  order       Int                        @unique
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @updatedAt
  experiments ExperimentSectionContent[]
}

model ExperimentSectionContent {
  id                  String            @id @default(uuid())
  experimentId        String
  experimentSectionId String
  text                String
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  files               ExperimentFile[]
  experiment          Experiment        @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  experimentSection   ExperimentSection @relation(fields: [experimentSectionId], references: [id])
  sectionsCritiques   SectionCritique[]

  @@unique([experimentId, experimentSectionId])
}

model ExperimentAttribute {
  id                String                     @id @default(uuid())
  name              String
  slug              String                     @unique
  order             Int                        @unique
  multipleSelection Boolean
  createdAt         DateTime                   @default(now())
  updatedAt         DateTime                   @updatedAt
  values            ExperimentAttributeValue[]
}

model ExperimentAttributeValue {
  id          String              @id @default(uuid())
  attributeId String
  value       String
  slug        String              @unique
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  attribute   ExperimentAttribute @relation(fields: [attributeId], references: [id])
  experiments Experiment[]        @relation("ExperimentToExperimentAttributeValue")
}

model File {
  id                    String           @id @default(uuid())
  originalName          String
  path                  String
  mimeType              String
  createdById           String?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  startpageId           Boolean?
  experimentPreviewFile Experiment[]
  experimentFile        ExperimentFile[]
  createdBy             User?            @relation(fields: [createdById], references: [id])
  startpage             Startpage?       @relation(fields: [startpageId], references: [id])
  userFile              UserFile?
}

model ExperimentFile {
  id                  String                   @id @default(uuid())
  fileId              String
  description         String?
  experimentSectionId String
  order               Int
  createdAt           DateTime                 @default(now())
  updatedAt           DateTime                 @updatedAt
  experimentSection   ExperimentSectionContent @relation(fields: [experimentSectionId], references: [id], onDelete: Cascade)
  file                File                     @relation(fields: [fileId], references: [id])

  @@unique([experimentSectionId, order])
}

model UserFile {
  id     String  @id @default(uuid())
  fileId String  @unique
  userId String? @unique
  file   File    @relation(fields: [fileId], references: [id])
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String   @unique
  ipAddress      String?
  userAgent      String?
  userId         String
  createdAt      DateTime
  updatedAt      DateTime
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Rating {
  value        Int
  userId       String
  experimentId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  experiment   Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, experimentId], name: "compoundId")
}

model Comment {
  id           String     @id @default(uuid())
  text         String
  userId       String
  experimentId String
  parentId     String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  experiment   Experiment @relation(fields: [experimentId], references: [id], onDelete: Cascade)
  parent       Comment?   @relation("CommentToComment", fields: [parentId], references: [id])
  children     Comment[]  @relation("CommentToComment")
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Review {
  id                String            @id @default(uuid())
  experiment        Experiment        @relation(fields: [experimentId], references: [id])
  experimentId      String
  reviewer          User              @relation(fields: [reviewerId], references: [id])
  reviewerId        String
  sectionsCritiques SectionCritique[]
  sectionCritiqueId String
  alreadyReviewed   Boolean
}

model SectionCritique {
  id               String                   @id @default(uuid())
  review           Review                   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  reviewId         String
  sectionContent   ExperimentSectionContent @relation(fields: [sectionContentId], references: [id], onDelete: Cascade)
  sectionContentId String
  critique         String                   @db.Text
  createdAt        DateTime                 @default(now())
  updatedAt        DateTime                 @updatedAt

  @@unique([reviewId, sectionContentId])
}

model SeedStatus {
  name        String   @id
  performedAt DateTime @default(now())
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum ExperimentStatus {
  DRAFT
  IN_REVIEW
  PUBLISHED
  REJECTED
}
