{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": "prisma generate && nuxt build",
    "dev": "prisma generate && dotenv -e .env.development nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "prisma generate && vitest run ./tests/unit",
    "test:unit:coverage": "prisma generate && vitest run --coverage ./tests/unit",
    "test:integration": "prisma generate && dotenv -e .env.test vitest run ./tests/integration",
    "test:e2e": "prisma generate && playwright test",
    "migrate": "dotenv -e .env.development prisma migrate dev",
    "migrate:seed": "dotenv -e .env.development prisma db seed"
  },
  "dependencies": {
    "@nuxt/icon": "^1.10.3",
    "@nuxtjs/color-mode": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@vee-validate/zod": "^4.14.7",
    "@vueuse/core": "^12.0.0",
    "bcrypt": "^5.1.1",
    "better-auth": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-vue-next": "^0.469.0",
    "nuxt": "^3.14.159",
    "nuxt-authorization": "^0.3.2",
    "radix-vue": "^1.9.11",
    "shadcn-nuxt": "^0.11.3",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.3",
    "vue": "latest",
    "vue-router": "latest",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.2",
    "@nuxt/eslint": "^0.7.4",
    "@nuxt/test-utils": "^3.14.4",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@playwright/test": "^1.49.1",
    "@prisma/client": "^6.1.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.4",
    "happy-dom": "^15.11.7",
    "playwright-core": "^1.49.1",
    "postcss": "^8.4.49",
    "prisma": "^6.1.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6",
    "vitest-mock-extended": "^2.0.2"
  }
}
