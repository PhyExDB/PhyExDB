{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": "prisma generate && nuxt build",
    "dev": "prisma generate && dotenv -e .env.development nuxt dev",
    "generate": "nuxt generate",
    "preview": "dotenv -e .env.development nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "prisma generate && vitest run ./tests/unit",
    "test:unit:coverage": "prisma generate && vitest run --coverage ./tests/unit",
    "test:e2e": "playwright test"
  },
