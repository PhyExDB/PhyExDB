    "@types/jsonwebtoken": "^9.0.8",
    "@vee-validate/zod": "^4.15.0",
    "@vueuse/core": "^12.6.1",
    "@vueuse/nuxt": "^12.6.1",
    "bcrypt": "^5.1.1",
